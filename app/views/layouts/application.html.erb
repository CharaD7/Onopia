<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Onopia.com" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "wijmo" %>
    <%= yield :stylesheet_library %>
    
    
    <%= javascript_include_tag "application" %>
    <% if ENV["RAILS_ENV"] == "test" %>
        <%= javascript_include_tag('culerity') %>
    <% end %>
    <%= yield :javascript_library %>
    
    <!-- stylesheets -->
    <% if @current_user && @current_user.theme %>
      <%= stylesheet_link_tag @current_user.theme.url %>
    <% else %>
      <%= stylesheet_link_tag "http://cdn.wijmo.com/themes/aristo/jquery-wijmo.css" %>
    <% end %>
    
    <%= stylesheet_link_tag "http://cdn.wijmo.com/jquery.wijmo-open.1.5.0.css", "http://cdn.wijmo.com/jquery.wijmo-complete.1.5.0.css" %>
    
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.6.2.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.16/jquery-ui.min.js" type="text/javascript"></script>
    <script src="http://cdn.wijmo.com/external/jquery.bgiframe-2.1.3-pre.js" type="text/javascript"></script>
    <script src="http://cdn.wijmo.com/external/globalize.min.js" type="text/javascript"></script>
    <script src="http://cdn.wijmo.com/external/jquery.mousewheel.min.js" type="text/javascript"></script>
    <script src="http://cdn.wijmo.com/external/raphael.js" type="text/javascript"></script>
    <script src="http://cdn.wijmo.com/jquery.wijmo-complete.1.5.0.min.js" type="text/javascript"></script>
    
    
    <script src="/assets/wijmo-open.js" type="text/javascript"></script>
    
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%= yield %>
    </div>
    <div id="message"/>
    <% flash.each do |name, msg| %>
      <script type="text/javascript">
        showMessage("Information", "<%= msg %>");
      </script>
    <% end %>
  </body>
</html>

