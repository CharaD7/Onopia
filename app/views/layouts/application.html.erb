<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Onopia.com" %></title>
    
    <!-- javascripts -->
    <%= javascript_include_tag "application" %>
    <% if ENV["RAILS_ENV"] == "test" %>
        <%= javascript_include_tag('culerity') %>
    <% end %>
    <%= yield :javascript_library %>
    <%= javascript_include_tag('http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.7.1.js') %>
    <%= javascript_include_tag('http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.16/jquery-ui.js') %>
    
    <%= javascript_include_tag('http://cdn.wijmo.com/external/jquery.bgiframe-2.1.3-pre.js') %>
    <%= javascript_include_tag('http://cdn.wijmo.com/external/globalize.min.js') %>
    <%= javascript_include_tag('http://cdn.wijmo.com/external/jquery.mousewheel.min.js') %>
    <%= javascript_include_tag('http://cdn.wijmo.com/external/raphael.js') %>
    <%= javascript_include_tag('http://cdn.wijmo.com/jquery.wijmo-open.1.5.0.min.js') %>
    <%= javascript_include_tag('http://cdn.wijmo.com/jquery.wijmo-open.1.5.0.min.js') %>
    <%= javascript_include_tag('jquery.dataTables') %>
  
    
    <!-- stylesheets -->
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "wijmo" %>
    <%= stylesheet_link_tag "demo_page" %>
    <%= stylesheet_link_tag "demo_table" %>
    <%= stylesheet_link_tag "demo_table_jui" %>
    <% if @current_user && @current_user.theme %>
      <%= stylesheet_link_tag @current_user.theme.url %>
    <% else %>
      <%= stylesheet_link_tag "http://cdn.wijmo.com/themes/aristo/jquery-wijmo.css" %>
    <% end %>
    <%= stylesheet_link_tag "http://cdn.wijmo.com/jquery.wijmo-open.1.5.0.css", "http://cdn.wijmo.com/jquery.wijmo-complete.1.5.0.css" %>
    <%= yield :stylesheet_library %>
    
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%= yield %>
    </div>
    <% flash.each do |name, msg| %>
      <script type="text/javascript">
        showMessage("Information", "<%= msg %>");
      </script>
    <% end %>
    <div id="message"/>
    <%= yield(:javascript) %>
  </body>
</html>
